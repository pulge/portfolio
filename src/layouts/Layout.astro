---
import '@/styles/global.css'
import '@/styles/typography.css'
import ScrollTop from '@/components/ScrollTop.astro'
import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
}

const { class: className } = Astro.props
const isHomePage = Astro.url.pathname === '/' || Astro.url.pathname === ''
---

<!doctype html>
<html
  class="bg-background text-foreground scheme-light-dark"
  lang={SITE.locale}
>
  <Head>
    <slot name="head" />
  </Head>
  <body class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
    <header
      id="main-header"
      class={cn(
        'bg-background/50 sticky top-0 z-50 divide-y backdrop-blur-sm xl:divide-none transition-transform duration-300',
        isHomePage && '-translate-y-full'
      )}
      data-home-page={isHomePage}
    >
      <Header />
      <slot name="subposts-navigation" />
      <slot name="table-of-contents" />
    </header>
    <main
      class={cn('w-full mx-auto flex grow flex-col gap-y-6 px-4', className)}
    >
      <ScrollTop />
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
  function initHeaderScroll() {
    const header = document.getElementById('main-header');
    const isHomePage = header?.getAttribute('data-home-page') === 'true';

    if (isHomePage) {
      const scrollThreshold = 100;

      function handleScroll() {
        const currentScrollY = window.scrollY;

        if (currentScrollY > scrollThreshold) {
          // Scrolled down past threshold - show header
          header?.classList.remove('-translate-y-full');
        } else {
          // At top of page - hide header
          header?.classList.add('-translate-y-full');
        }
      }

      // Run once on load to set initial state
      handleScroll();

      window.addEventListener('scroll', handleScroll, { passive: true });
    }
  }

  // Run on initial page load
  initHeaderScroll();

  // Run on Astro view transitions (if enabled)
  document.addEventListener('astro:page-load', initHeaderScroll);
</script>