---
import type { ImageMetadata } from 'astro'
import { Icon } from 'astro-icon/components'
import { getFullSizeImages } from '../lib/media-utils'
import { Image, getImage } from 'astro:assets'

interface Props {
  name: string
  id: string
  images: ImageMetadata[]
}

const { name, images, id } = Astro.props

console.log(`[PhotoGallery] Rendering gallery for ${name} with ${images.length} images`)

// Create a map of full-size image URLs and metadata
const fullSizeImages = await getFullSizeImages(images, id)

// Generate optimized full-size URLs for each image
const optimizedImages = await Promise.all(
  images.map(async (img) => {
    try {
      const optimized = await getImage({ 
        src: img.src,
        format: 'webp',
        quality: 90
      })
      console.log(`[PhotoGallery] Optimized image: ${img.src} -> ${optimized.src}`)
      return optimized.src
    } catch (error) {
      console.error(`[PhotoGallery] Error optimizing image ${img.src}:`, error)
      return img.src
    }
  })
)

console.log(`[PhotoGallery] Full-size images processed: ${fullSizeImages.length}`)
---

<div>
  <div class="columns-1 gap-5 sm:columns-2 sm:gap-2 md:columns-3">
    {
      images.map((image, index) => {
        const fullImage = fullSizeImages[index]
        const optimizedSrc = optimizedImages[index]
        console.log(`[PhotoGallery] Rendering image ${index}: ${image.src} -> ${optimizedSrc}`)
        
        return (
          <div class="relative mb-5 break-inside-avoid sm:mb-2">
            <Image
              src={image.src}
              alt={`Photo ${index + 1} from my trip to ${name}`}
              loading={index < 15 ? 'eager' : 'lazy'}
              decoding={index < 15 ? 'sync' : 'async'}
              class="gallery-item gallery-image cursor-pointer transition-opacity hover:opacity-90"
              draggable={false}
              data-index={index}
              data-fullsize={optimizedSrc}
              data-fullwidth={fullImage.width}
              data-fullheight={fullImage.height}
              data-placeholder={fullImage.blurDataUrl}
              data-hash={fullImage.hash}
              width={image.width}
              height={image.height}
              widths={[360, 720, 1200, image.width]}
              sizes={`(max-width: 360px) 360px, (max-width: 720px) 720px, (max-width: 1200px) 1200px, ${image.width}px`}
            />
          </div>
        )
      })
    }
  </div>

  <!-- Overlay container -->
  <div
    id="gallery-overlay"
    class="fixed inset-0 z-[9999] hidden bg-background/50 backdrop-blur-lg"
  >
    <div
      class="relative flex h-full items-center justify-center"
      id="overlay-container"
    >
      <!-- Left navigation arrow -->
      <button
        id="prev-button"
        class="absolute left-5 hidden p-1.5 text-primary opacity-70 transition-all duration-300 hover:bg-secondary/50 hover:opacity-100 xl:block"
        aria-label="Previous image"
      >
        <Icon name="lucide:chevron-left" class="size-7" />
      </button>

      <div id="image-stack" class="relative grid">
        <div
          id="image-container-placeholder"
          class="image-container z-[1] col-start-1 row-start-1"
        >
          {
            fullSizeImages.map((image, index) => (
              <img
                id={image.hash}
                src={image.blurDataUrl}
                alt={`Placeholder for photo ${index + 1} from my trip to ${name}`}
                class="gallery-placeholder hidden"
                width={image.width}
                height={image.height}
                style={{
                  maxWidth: '90vw',
                  maxHeight: '90vh',
                  width: 'auto',
                  height: 'auto',
                }}
                decoding="sync"
                loading="eager"
              />
            ))
          }
        </div>

        <div
          id="image-container"
          class="image-container z-[2] col-start-1 row-start-1"
        >
        </div>
      </div>

      <!-- Right navigation arrow -->
      <button
        id="next-button"
        class="absolute right-5 hidden p-1.5 text-primary opacity-70 transition-all duration-300 hover:bg-secondary/50 hover:opacity-100 xl:block"
        aria-label="Next image"
      >
        <Icon name="lucide:chevron-right" class="size-7" />
      </button>

      <!-- Close button -->
      <button
        id="close-button"
        class="absolute right-3 top-3 p-1.5 text-primary opacity-70 transition-all duration-300 hover:bg-secondary/50 hover:opacity-100 sm:right-5 sm:top-5"
        aria-label="Close gallery"
        title="close"
      >
        <Icon name="lucide:x" class="size-6" />
      </button>
    </div>
  </div>
</div>

<style>
  .gallery-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .gallery-image-zoom {
    max-width: 90vw;
    max-height: 90vh;
    width: auto;
    height: auto;
    object-fit: contain;
    transition: opacity 0.3s ease;
  }

  .gallery-placeholder {
    filter: blur(20px);
    transform: scale(1.1);
    max-width: 90vw;
    max-height: 90vh;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  .gallery-placeholder-loaded {
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  #image-container,
  #image-container-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

<script>
  // Setup the gallery functionality
  function setupGallery() {
    console.log('[Gallery Script] Initializing gallery...')
    
    const isMobile = window.innerWidth < 640
    const galleryImages = document.querySelectorAll(
      '.gallery-item',
    ) as NodeListOf<HTMLImageElement>
    
    console.log(`[Gallery Script] Found ${galleryImages.length} gallery images`)
    
    const overlay = document.getElementById('gallery-overlay') as HTMLDivElement
    const prevButton = document.getElementById(
      'prev-button',
    ) as HTMLButtonElement
    const nextButton = document.getElementById(
      'next-button',
    ) as HTMLButtonElement
    const closeButton = document.getElementById(
      'close-button',
    ) as HTMLButtonElement

    let activeImage: HTMLImageElement | null = null
    let currentIndex = -1
    let inactivityTimer: number | null = null

    // Button visibility functions
    function showButtons() {
      prevButton.style.opacity = '0.7'
      nextButton.style.opacity = '0.7'
      closeButton.style.opacity = '0.7'

      // Reset the timer if it exists
      if (inactivityTimer) {
        clearTimeout(inactivityTimer)
      }

      // Only apply the inactivity timer on non-mobile screens (640px and up)
      if (!isMobile) {
        // Start a new timer to hide buttons after 2 seconds
        inactivityTimer = window.setTimeout(hideButtons, 2000)
      }
    }

    function hideButtons() {
      if (isMobile) return
      prevButton.style.opacity = '0'
      nextButton.style.opacity = '0'
      closeButton.style.opacity = '0'
    }

    function handleImageClick(event: MouseEvent) {
      const previewImg = event.target as HTMLImageElement

      console.log('[Gallery Script] Image clicked:', previewImg.dataset.index)

      if (!overlay.classList.contains('hidden')) {
        if (
          event.target === prevButton ||
          event.target === nextButton ||
          (event.target as Element).closest('#prev-button') ||
          (event.target as Element).closest('#next-button') ||
          (event.target as Element).closest('#close-button')
        ) {
          event.stopPropagation()
          return
        }

        handleCloseZoom()
        return
      }

      const imageContainer = document.getElementById(
        'image-container',
      ) as HTMLDivElement

      const fullWidth = parseInt(previewImg.dataset.fullwidth || '0', 10)
      const fullHeight = parseInt(previewImg.dataset.fullheight || '0', 10)
      const fullSizeSrc = previewImg.dataset.fullsize || ''
      const imageHash = previewImg.dataset.hash || ''
      const placeholderSrc = previewImg.dataset.placeholder || ''

      console.log('[Gallery Script] Opening image:', {
        fullSizeSrc,
        dimensions: `${fullWidth}x${fullHeight}`,
        hash: imageHash,
        placeholderSrc: placeholderSrc.substring(0, 50) + '...',
      })

      // Show placeholder immediately
      const placeholderImg = document.getElementById(imageHash) as HTMLImageElement
      if (placeholderImg) {
        console.log('[Gallery Script] Showing placeholder')
        placeholderImg.classList.remove('hidden')
        placeholderImg.style.zIndex = '1'
      }

      // Create full-size image
      const fullSizeImg = document.createElement('img')
      fullSizeImg.id = `full-${imageHash}`
      fullSizeImg.className = 'gallery-image-zoom'
      fullSizeImg.src = fullSizeSrc
      fullSizeImg.alt = previewImg.alt
      fullSizeImg.draggable = false
      fullSizeImg.style.maxWidth = '90vw'
      fullSizeImg.style.maxHeight = '90vh'
      fullSizeImg.style.width = 'auto'
      fullSizeImg.style.height = 'auto'
      fullSizeImg.style.objectFit = 'contain'
      fullSizeImg.style.zIndex = '2'
      fullSizeImg.style.opacity = '0'

      activeImage = fullSizeImg
      currentIndex = parseInt(previewImg.dataset.index || '0', 10)

      imageContainer.appendChild(fullSizeImg)

      // Show overlay immediately
      overlay.classList.remove('hidden')
      document.body.style.overflow = 'hidden'
      showButtons()
      overlay.addEventListener('mousemove', showButtons)

      if (fullSizeImg.complete && fullSizeImg.naturalWidth > 0) {
        console.log('[Gallery Script] Image already loaded, showing immediately')
        fullSizeImg.style.opacity = '1'
        if (placeholderImg) {
          setTimeout(() => {
            placeholderImg.classList.add('gallery-placeholder-loaded')
          }, 100)
        }
      } else {
        fullSizeImg.onload = () => {
          console.log('[Gallery Script] Full-size image loaded')
          fullSizeImg.style.opacity = '1'
          if (placeholderImg) {
            setTimeout(() => {
              placeholderImg.classList.add('gallery-placeholder-loaded')
            }, 300)
          }
        }

        fullSizeImg.onerror = () => {
          console.error('[Gallery Script] Error loading image:', fullSizeSrc)
          fullSizeImg.style.opacity = '1' // Show anyway even if error
        }
      }
    }

    function handleCloseZoom() {
      console.log('[Gallery Script] Closing zoom view')
      
      if (!activeImage) return

      // Find the current placeholder by hash and hide it
      const currentHash = activeImage.id.replace('full-', '')
      const currentPlaceholder = document.getElementById(currentHash)
      if (currentPlaceholder) {
        currentPlaceholder.classList.remove('gallery-placeholder-loaded')
        currentPlaceholder.classList.add('hidden')
      }

      if (activeImage) {
        activeImage.remove()
      }

      // Hide overlay
      overlay.classList.add('hidden')
      document.body.style.overflow = ''

      // Clear timer
      if (inactivityTimer) {
        clearTimeout(inactivityTimer)
        inactivityTimer = null
      }

      // Remove mousemove listener
      overlay.removeEventListener('mousemove', showButtons)

      // Reset references
      activeImage = null
      currentIndex = -1
    }

    function navigateGallery(direction: number) {
      console.log('[Gallery Script] Navigating:', direction > 0 ? 'next' : 'previous')
      
      if (currentIndex === -1) return

      const imagesArray = Array.from(galleryImages)
      const totalImages = imagesArray.length
      const newIndex = (currentIndex + direction + totalImages) % totalImages
      const targetImg = imagesArray[newIndex]

      handleCloseZoom()
      targetImg.click()
    }

    // Add click handlers to all gallery images
    galleryImages.forEach((img, index) => {
      console.log(`[Gallery Script] Attaching click handler to image ${index}`)
      img.addEventListener('click', handleImageClick as EventListener)
    })

    // Close zoom when clicking on the overlay
    overlay.addEventListener('click', handleCloseZoom)

    // Navigation event listeners
    prevButton.addEventListener('click', (e) => {
      e.stopPropagation()
      navigateGallery(-1)
    })

    nextButton.addEventListener('click', (e) => {
      e.stopPropagation()
      navigateGallery(1)
    })

    closeButton.addEventListener('click', (e) => {
      e.stopPropagation()
      handleCloseZoom()
    })

    console.log('[Gallery Script] Gallery setup complete')
  }

  // Run setup when the DOM is ready
  document.addEventListener('DOMContentLoaded', setupGallery)

  // Also handle astro:page-load for Astro's view transitions
  document.addEventListener('astro:page-load', setupGallery)
</script>