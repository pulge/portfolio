---
import Link from '@/components/Link.astro'
import { Badge } from '@/components/ui/badge'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  coding: CollectionEntry<'coding'>
}

const { coding } = Astro.props
---

<div
  class="group bg-primary-foreground/70 hover:bg-primary-foreground border p-4 transition-colors duration-300 ease-in-out"
>
  <Link
    href={coding.data.link ?? '#'}
    class="flex flex-col gap-4 sm:flex-row"
    external={coding.data.link ? true : undefined}
    aria-disabled={!coding.data.link}
    style={!coding.data.link
      ? 'pointer-events: none; cursor: default;'
      : undefined}
  >
    {
      coding.data.image && (
        <div class="w-full sm:max-w-3xs sm:shrink-0">
          <Image
            src={coding.data.image}
            alt={coding.data.title}
            width={1200}
            height={630}
            class="h-full object-cover grayscale transition-all duration-300 group-hover:grayscale-0"
          />
        </div>
      )
    }
    <div class="grow">
      <h3 class="mb-1 text-lg font-medium">
        {coding.data.title}
      </h3>
      <p class="text-muted-foreground mb-2 text-sm">
        {coding.data.description}
      </p>
      {
        coding.data.startDate && (
          <p class="text-muted-foreground/70 mb-2 flex items-center gap-x-1.5 text-xs">
            <span class="flex items-center gap-x-1.5">
              <Icon name="lucide:calendar" class="size-3" />
              <span>
                {formatDate(coding.data.startDate)}
                {coding.data.endDate
                  ? ` → ${formatDate(coding.data.endDate)}`
                  : ' → Present'}
              </span>
            </span>
          </p>
        )
      }
      {
        coding.data.tags && (
          <div class="flex flex-wrap gap-2">
            {coding.data.tags.map((tag: string) => (
              <Badge variant="muted" className="lowercase">
                <Icon name="lucide:hash" class="size-3" />
                {tag}
              </Badge>
            ))}
          </div>
        )
      }
    </div>
  </Link>
</div>
