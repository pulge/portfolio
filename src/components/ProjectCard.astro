---
import Link from '@/components/Link.astro'
import { Badge } from '@/components/ui/badge'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  coding: CollectionEntry<'coding'>
}

const { coding } = Astro.props
---

<div
  class="group bg-primary-foreground/70 hover:bg-primary-foreground border transition-colors duration-300 ease-in-out"
>
  <div class="flex flex-col gap-4">
    {
      coding.data.image ? (
        <Link
          href={coding.data.link ?? '#'}
          external={coding.data.link ? true : undefined}
          aria-disabled={!coding.data.link}
          class="sm:shrink-0"
        >
          <Image
            src={coding.data.image}
            alt={coding.data.title}
            width={1200}
            height={630}
            class="max-h-84 object-cover grayscale transition-all duration-300 group-hover:grayscale-0"
          />
        </Link>
      ) : (
        <div class="bg-muted flex aspect-[1200/630] max-h-84 items-center justify-center sm:shrink-0">
          <div class="text-muted-foreground p-8 text-center grid place-items-center gap-2">
            <Icon name="lucide:construction" class="size-10" />
            <p class="text-sm">{coding.data.title}</p>
          </div>
        </div>
      )
    }
    <div class="grow">
      <Link
        href={coding.data.link ?? '#'}
        external={coding.data.link ? true : undefined}
        aria-disabled={!coding.data.link}
        class="p-4 py-0"
      >
        <h3 class="mb-1 text-lg font-medium">
          {coding.data.title}
        </h3>

        <p class="text-muted-foreground mb-2 text-sm">
          {coding.data.description}
        </p>

        {
          coding.data.startDate && (
            <p class="text-muted-foreground/70 mb-2 flex items-center gap-x-1.5 text-xs">
              <span class="flex items-center gap-x-1.5">
                <Icon name="lucide:calendar" class="size-3" />
                <span>
                  {formatDate(coding.data.startDate)}
                  {coding.data.endDate
                    ? ` → ${formatDate(coding.data.endDate)}`
                    : ' → Present'}
                </span>
              </span>
            </p>
          )
        }
      </Link>

      {
        coding.data.tags && (
          <div class="flex flex-wrap gap-2 p-4 pt-0">
            {coding.data.tags.map((tag: string) => (
              <Link href={`/tags/${tag}`} class="lowercase">
                <Badge variant="muted">
                  <Icon name="lucide:hash" class="size-3" />
                  {tag}
                </Badge>
              </Link>
            ))}
          </div>
        )
      }
    </div>
  </div>
</div>
