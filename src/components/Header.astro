---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/consts'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import logo from '../../public/static/logo.svg'
import { buttonVariants } from './ui/button'

const currentPath = Astro.url.pathname
---

<div>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between gap-4 px-4 py-3"
  >
    <Link href="/" class="flex shrink-0 items-center justify-center gap-3">
      <!-- <Image src={logo} alt="Logo" class="size-5 sm:size-6" /> -->
      <Icon name="lucide:home" class="size-5 shrink-0" />

      <!-- <span
        class="hidden h-full text-lg leading-none font-medium min-[400px]:block"
        >{SITE.title}</span
      > -->
    </Link>
    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-4 text-sm sm:gap-6">
        {
          NAV_LINKS.map((item) => {
            // Check if current path matches the nav item
            let isActive = currentPath === item.href || currentPath.startsWith(item.href + '/')
            
            // Special case: highlight blog when on tags page
            if (item.href === '/blog' && currentPath.startsWith('/tags')) {
              isActive = true
            }
            
            return (
              <Link
                href={item.href}
                class={buttonVariants({ 
                  variant: isActive ? 'static' : 'ghost', 
                  size: 'sm' 
                })}
              >
                {item.label} 
              </Link>
            )
          })
        }
      </nav>
      <!-- <ThemeToggle transition:persist /> -->
    </div>
  </div>
</div>